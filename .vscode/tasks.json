{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "openapi",
      "type": "shell",
      "command": "oapi-codegen",
      "args": [
        "-config",
        "apispec/openapi-codegen.conf.yaml",
        "apispec/api.yaml"
      ]
    },
    {
      "label": "api",
      "type": "shell",
      "command": "air",
      "args": ["-c", ".air.toml"]
    },
    {
      "label": "tailwindcss - watch",
      "type": "shell",
      "command": "tailwindcss",
      "options": {
        "cwd": "internal/frontend"
      },
      "args": ["-o", "assets/css/styles.min.css", "--minify", "--watch"]
    },
    {
      "label": "tailwindcss - build",
      "type": "shell",
      "command": "tailwindcss",
      "options": {
        "cwd": "internal/frontend"
      },
      "args": ["-o", "assets/css/styles.min.css", "--minify"]
    },
    {
      "label": "templ - build",
      "type": "shell",
      "command": "templ",
      "args": ["generate", "-path", "./internal/frontend"]
    },
    {
      "label": "templ - watch",
      "type": "shell",
      "command": "templ",
      "args": ["generate", "-path", "./internal/frontend", "-watch"]
    },
    {
      "label": "frontend - watch",
      "dependsOn": ["templ - watch", "tailwindcss - watch"]
    }
  ]
}
